<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_change"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="44dp"
        android:adjustViewBounds="true"
        android:background="@drawable/icon_btn"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toTopOf="@+id/smile_btn_change"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/smile_btn_change"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="356dp"
        android:background="@drawable/smile_btn"
        app:layout_constraintStart_toStartOf="@+id/btn_change"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>